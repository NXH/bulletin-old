<html lang="en">
  <body>
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <div class = "panel panel-default">
            <div class = "panel-heading">
              <h1> <%= @event_title %> </h1>
            </div>
            <div class ="panel-body">
              <h3> Description: </h3> <h4><%= @event_desc %> </h4>
              <h3> Location: </h3> <h4><%= @event_loc %> </h4>
              <h3> Start Time: </h3> <h4><%= @event_start.to_formatted_s(:long_ordinal) %> </h4>
              <h3> End Time: </h3> <h4><%= @event_end.to_formatted_s(:long_ordinal) %> </h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
